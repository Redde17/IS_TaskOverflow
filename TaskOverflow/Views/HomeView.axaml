<UserControl
    x:Class="TaskOverflow.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:elemsViews="clr-namespace:TaskOverflow.Views.HomeViewElems"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TaskOverflow.ViewModels"
    d:DesignHeight="200"
    d:DesignWidth="350"
    x:DataType="vm:MainWindowViewModel"
    mc:Ignorable="d">


    <Grid ColumnDefinitions="70, *">
        <!--  Sidebar for navigation  -->
        <elemsViews:NavBar Grid.Column="0" />

        <!--  Page Content  -->
        <Grid Grid.Column="1" RowDefinitions="50, *">
            <!--  Title bar  -->
            <Panel Grid.Row="0" Background="{StaticResource LightBackgroundBrush}">
                <Grid ColumnDefinitions="5*, 5*">
                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="Black">
                        TITLE
                    </TextBlock>
                    <WrapPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <Button Command="{Binding TaskManagerVM.debugFunc}">
                            Debug button
                        </Button>
                        <Button>
							Add Task (Non funziona)
						</Button>
                    </WrapPanel>
                </Grid>
            </Panel>

            <!--  Content panel  -->
            <Panel Grid.Row="1">
                <Grid ColumnDefinitions="40*, 5*, 55*">
                    <!--  Task list  -->
                    <Panel Grid.Column="0">
                        <elemsViews:TaskListView />
                    </Panel>
                    <!--  Empty space  -->
                    <Panel Grid.Column="1" />
                    <!--  Task viewer  -->
                    <Panel Grid.Column="2">
                        <elemsViews:TaskView />
                    </Panel>
                </Grid>
            </Panel>
        </Grid>
    </Grid>
</UserControl>

