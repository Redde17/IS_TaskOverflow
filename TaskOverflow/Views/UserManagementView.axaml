<UserControl
    x:Class="TaskOverflow.Views.UserManagementView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:GeneralElemsViews="clr-namespace:TaskOverflow.Views.GeneralElems"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="{StaticResource LighterDarkBackgroundBrush}" ColumnDefinitions="70, *">
        <!--  Sidebar for navigation  -->
        <GeneralElemsViews:NavBar Grid.Column="0" />
		
        <WrapPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel>
                <Panel Background="{StaticResource DarkBackgroundBrush}">
                    <TextBlock>
                        User image
                    </TextBlock>
                </Panel>
                <Panel Background="{StaticResource DarkBackgroundBrush}">
                    <TextBlock>
                        User name1
                    </TextBlock>
                </Panel>
            </StackPanel>
        </WrapPanel>
    </Grid>
</UserControl>
